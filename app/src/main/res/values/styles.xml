<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_main" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/main_btn_color</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="btn_normal" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange500</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="btn_disabled" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/disabled_orange</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="chip_indicator" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="rippleColor">@null</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:paddingHorizontal">1dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="android:clickable">false</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/indicator_txt_color</item>
        <item name="chipBackgroundColor">@color/indicator_chip_color</item>
    </style>

    <style name="custom_dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:layout_marginHorizontal">20dp</item>
    </style>

    <style name="custom_bottom_sheet" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="behavior_draggable">false</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="MaterialButton.12.14.M" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <style name="bottom_sheet_animation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="custom_tab_layout">
        <item name="tabIndicatorColor">@color/orange500</item>
        <item name="tabTextColor">@color/gray400</item>
        <item name="tabSelectedTextColor">@color/orange500</item>
        <item name="tabTextAppearance">@style/b2_reg_14</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="tabIndicator">@drawable/bg_tab_indicator</item>
        <item name="tabSelectedTextAppearance">@style/b2_bold_14</item>
    </style>

    <style name="custom_date_picker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/orange500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/material_on_surface_emphasis_medium</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="fontFamily">@font/pretendard_medium</item>
    </style>
</resources>