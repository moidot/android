<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn_orange500" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange500</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="number_indicator" parent="Widget.AppCompat.Button">
        <item name="android:textSize">12dp</item>
        <item name="android:background">@drawable/btn_indicator_selector</item>
        <item name="android:textColor">@color/indicator_txt_color</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>
</resources>