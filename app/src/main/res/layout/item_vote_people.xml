<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp">

    <TextView
        android:id="@+id/item_vote_people_tv_name"
        style="@style/b2_reg_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="11dp"
        android:textColor="@color/gray600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="스탑카이트" />

    <ImageView
        android:id="@+id/item_vote_people_iv_leader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_leader"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/item_vote_people_tv_name"
        app:layout_constraintStart_toEndOf="@id/item_vote_people_tv_name"
        app:layout_constraintTop_toTopOf="@id/item_vote_people_tv_name" />

</androidx.constraintlayout.widget.ConstraintLayout>