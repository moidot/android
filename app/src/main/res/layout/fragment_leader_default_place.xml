<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.kakao.vectormap.MapView
                android:id="@+id/fg_leader_default_place_map_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/fg_leader_default_place_view_interaction"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/fg_leader_default_place_gradient_view"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:background="@drawable/bg_map_gradient"
                app:layout_constraintBottom_toBottomOf="@id/fg_leader_default_place_map_view"
                app:layout_constraintEnd_toEndOf="@id/fg_leader_default_place_map_view"
                app:layout_constraintStart_toStartOf="@id/fg_leader_default_place_map_view" />

            <View
                android:id="@+id/fg_leader_default_place_view_interaction"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fg_leader_default_place_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_bottom_sheet"
            app:behavior_expandedOffset="80dp"
            app:behavior_fitToContents="false"
            app:behavior_halfExpandedRatio="0.3"
            app:behavior_hideable="false"
            app:behavior_peekHeight="48dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <include
                android:id="@+id/include_bottom_leader_default_place"
                layout="@layout/bottom_leader_default_place" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
