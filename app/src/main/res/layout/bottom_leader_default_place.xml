<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingBottom="24dp">

    <ImageView
        android:id="@+id/bottom_leader_default_place_iv_place_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:src="@drawable/ic_bottom_sheet_handle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_leader_default_place_container_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray100"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_leader_default_place_iv_place_handle"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/bottom_leader_default_place_view_cover"
                android:layout_width="6dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_item_cover"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bottom_leader_default_place_tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="17dp"
                android:layout_marginStart="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/bottom_leader_default_place_view_cover"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="김모임엘렐레와" />

            <ImageView
                android:id="@+id/bottom_leader_default_place_iv_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_leader"
                app:layout_constraintBottom_toBottomOf="@id/bottom_leader_default_place_tv_member_name"
                app:layout_constraintStart_toEndOf="@id/bottom_leader_default_place_tv_member_name"
                app:layout_constraintTop_toTopOf="@id/bottom_leader_default_place_tv_member_name" />

            <ImageView
                android:id="@+id/bottom_leader_default_place_iv_transportation_type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_group_info_transportation" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bottom_leader_default_place_container_empty_memeber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_leader_default_place_container_info">

        <TextView
            style="@style/h2_bold_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/space_leader_default_no_member_input_location"
            android:textColor="@color/gray700" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/img_space_place_room" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_leader_default_place_container_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_group_info_share"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_leader_default_place_container_empty_memeber">

        <TextView
            android:id="@+id/bottom_leader_default_place_tv_share_title"
            style="@style/b2_med_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="@string/space_info_share_title"
            android:textColor="@color/orange500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/bottom_leader_default_place_container_url_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toStartOf="@id/bottom_leader_default_place_view_share"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_leader_default_place_tv_share_title">

            <TextView
                style="@style/c1_reg_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/space_info_copy_url"
                android:textColor="@color/gray700" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_url_copy" />
        </LinearLayout>

        <View
            android:id="@+id/bottom_leader_default_place_view_share"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="26dp"
            android:layout_marginVertical="6dp"
            android:background="@color/gray300"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bottom_leader_default_place_container_kakao_share"
            app:layout_constraintStart_toEndOf="@id/bottom_leader_default_place_container_url_copy"
            app:layout_constraintTop_toBottomOf="@+id/bottom_leader_default_place_tv_share_title" />


        <LinearLayout
            android:id="@+id/bottom_leader_default_place_container_kakao_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bottom_leader_default_place_view_share"
            app:layout_constraintTop_toBottomOf="@id/bottom_leader_default_place_tv_share_title">

            <TextView
                style="@style/c1_reg_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/space_info_share_with_kakao"
                android:textColor="@color/gray700" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_kakao_share" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>